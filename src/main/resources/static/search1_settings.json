{
  "index" : {
    "analysis" : {
      "char_filter": {
        "whitespace_remove": {
          "type": "pattern_replace",
          "pattern": "\\s+",
          "replacement": ""
        }
      },
      "analyzer" : {
        "kor2eng_analyzer" : {
          "type" : "custom",
          "tokenizer" : "standard",
          "filter" : ["trim", "lowercase", "javacafe_kor2eng"]
        },
        "eng2kor_analyzer" : {
          "type" : "custom",
          "tokenizer" : "standard",
          "filter" : [ "trim", "lowercase", "javacafe_eng2kor"]
        },
        "chosung_index_analyzer" : {
          "type": "custom",
          "tokenizer" : "ngram_tokenizer",
          "filter" : [ "javacafe_chosung_filter", "lowercase", "trim", "edge_ngram_filter_front"]
        },
        "chosung_search_analyzer" : {
          "type" : "custom",
          "tokenizer" : "keyword",
          "filter" : [ "javacafe_chosung_filter", "lowercase", "trim"]
        },
        "ngram_analyzer" : {
          "type" : "custom",
          "min_gram": "2",
          "max_gram": "10",
          "tokenizer" : "edge_ngram_tokenizer",
          "filter" : [
            "lowercase", "trim"
          ],
          "char_filter": [
            "whitespace_remove"
          ]
        },
        "jamo_index_analyzer": {
          "type" : "custom",
          "tokenizer" : "ngram_tokenizer",
          "filter" : [
            "javacafe_jamo_filter", "lowercase", "trim", "edge_ngram_filter_front"
          ]
        },
        "jamo_search_analyzer" : {
          "type" : "custom",
          "tokenizer" : "ngram_tokenizer",
          "filter" : [
            "javacafe_jamo_filter", "lowercase", "trim"
          ]
        },
        "synonym_analyzer": {
          "tokenizer" : "edge_ngram_tokenizer",
          "filter": [
            "synonym_filter",  "lowercase", "trim"
          ],
          "char_filter": [
            "whitespace_remove"
          ]
        },
        "synonym_item_category_analyzer": {
          "type" : "custom",
          "min_gram": "2",
          "max_gram": "10",
          "tokenizer" : "ngram_tokenizer",
          "filter": [
            "synonym_item_category_filter",  "lowercase", "trim",  "edge_ngram_filter_front"
          ],
          "char_filter": [
            "whitespace_remove"
          ]
        },
        "html_analyzer" : {
          "type" : "custom",
          "tokenizer" : "standard",
          "filter" : [ "lowercase" ],
          "char_filter" : [ "html_strip" ]
        }
      },
      "tokenizer" : {
        "ngram_tokenizer" : {
          "type" : "nGram",
          "min_gram" : "2",
          "max_gram" : "3",
          "decompound_mode" : "mixed",
          "token_chars" : [ "letter", "digit", "punctuation", "symbol" ]
        },
        "edge_ngram_tokenizer" : {
          "type" : "edge_ngram",
          "min_gram" : "2",
          "max_gram" : "10",
          "decompound_mode" : "mixed",
          "token_chars" : [
            "letter", "digit", "punctuation", "symbol"
          ]
        }
      },
      "filter" : {
        "edge_ngram_filter_front" : {
          "type" : "edge_ngram",
          "min_gram" : "2",
          "max_gram" : "10",
          "side" : "front"
        },
        "javacafe_chosung_filter" : {
          "type" : "javacafe_chosung"
        },
        "javacafe_jamo_filter" : {
          "type" : "javacafe_jamo"
        },
        "synonym_filter": {
          "type" : "synonym",
          "ignore_case" : true,
          "synonyms_path" : "analysis/synonym_item.txt"
        },
        "synonym_item_category_filter": {
          "type" : "synonym",
          "ignore_case" : true,
          "synonyms_path" : "analysis/synonym_item_category.txt"
        }
      }
    },
    "max_ngram_diff" : 50,
    "number_of_shards" : 6,
    "number_of_replicas" : 1
  }
}